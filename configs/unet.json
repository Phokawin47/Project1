{
  "seed": 42,
  "split_seed": 1234,
  "model": {
    "name": "unet",
    "args": {
      "in_channels": 1,
      "out_channels": 1,
      "features": [
        64,
        128,
        256,
        512
      ]
    }
  },
  "data": {
    "name": "brain_tumor_dataset",
    "args": {
      "root_dir": ["./exports_all", "./src/BrainTumorDataset"],

      "split": "train",
      "val_ratio": 0.1,
      "test_ratio": 0.1,
      "split_seed": 1234,
      "image_size": [128, 128],

      "noise_factor": 0.2,
      "noise_range": [0.1, 0.2],
      "noise_sampling": "uniform",

      "use_grayscale": true,
      "return_noise_level": false,

      "fixed_noise": false,
      "fixed_seed": 999,
      "seed": 123
    },

    "val_args": {
      "root_dir": ["./exports_all", "./src/BrainTumorDataset"],

      "split": "val",
      "val_ratio": 0.1,
      "test_ratio": 0.1,
      "split_seed": 1234,
      "image_size": [128, 128],

      "noise_factor": 0.2,
      "noise_range": [0.1, 0.2],
      "noise_sampling": "uniform",

      "use_grayscale": true,
      "return_noise_level": false,

      "fixed_noise": true,
      "fixed_seed": 999,
      "seed": 123
    },
    "test_args": {
      "root_dir": ["./exports_all", "./src/BrainTumorDataset"],
      "split": "test",
      "val_ratio": 0.1,
      "test_ratio": 0.1,
      "split_seed": 1234,
      "image_size": [128, 128],

      "noise_factor": 0.2,
      "noise_range": [0.1, 0.2],
      "noise_sampling": "uniform",

      "use_grayscale": true,
      "return_noise_level": false,

      "fixed_noise": true,
      "fixed_seed": 999,
      "seed": 123
    }
  },
  "training": {
    "trainer": "denoise",
    "device": "cuda",
    "epochs": 500,
    "batch_size": 16,
    "loss": "l1",
    "val_ratio": 0.2,
    "num_workers": 4,
    "pin_memory": false,
    "amp": false,
    "early_stopping_patience": 20,
    "optimizer_cfg": {
      "name": "adamw",
      "args": {
        "lr": 0.0001,
        "weight_decay": 0.0001
      }
    },
    "scheduler_cfg": {
      "name": "none"
    }
  },
  "output": {
    "runs_root": "runs",
    "exp_name": "Unet_schedule"
  }
}