{
  "seed": 42,
  "split_seed": 1234,

  "model": {
    "generator": {
      "name": "gan_generator",
      "args": {
        "in_channels": 1,
        "out_channels": 1
      }
    },
    "discriminator": {
      "name": "gan_discriminator",
      "args": {
        "in_channels": 2
      }
    }
  },

  "data": {
    "name": "brain_tumor_dataset",
    "args": {
      "root_dir": ["./exports_all", "./src/BrainTumorDataset"],

      "split": "train",
      "val_ratio": 0.2,
      "split_seed": 1234,
      "image_size": [256, 256],

      "noise_factor": 0.2,
      "noise_range": [0.1, 0.4],
      "noise_sampling": "uniform",

      "use_grayscale": true,
      "return_noise_level": false,

      "fixed_noise": false,
      "fixed_seed": 999,
      "seed": 123
    },

    "val_args": {
      "root_dir": ["./exports_all", "./src/BrainTumorDataset"],

      "split": "val",
      "val_ratio": 0.2,
      "split_seed": 1234,
      "image_size": [256, 256],

      "noise_factor": 0.2,
      "noise_range": [0.1, 0.4],
      "noise_sampling": "uniform",

      "use_grayscale": true,
      "return_noise_level": false,

      "fixed_noise": true,
      "fixed_seed": 999,
      "seed": 123
    }
  },

  "output": {
    "runs_root": "runs",
    "exp_name": "gan_rician"
  }
}
