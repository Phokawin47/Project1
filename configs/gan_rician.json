{
  "seed": 42,
  "split_seed": 1234,

  "model": {
    "generator": {
      "name": "gan_generator",
      "args": {
        "in_channels": 1,
        "out_channels": 1
      }
    },
    "discriminator": {
      "name": "gan_discriminator",
      "args": {
        "in_channels": 2
      }
    }
  },

  "data": {
    "name": "brain_tumor_dataset",
    "args": {
      "root_dir": "src/BrainTumorDataset/Training",
      "val_root_dir": "src/BrainTumorDataset/Testing",
      "image_size": [256, 256],
      "noise_factor": 0.2,
      "noise_range": [0.2, 0.4],
      "noise_sampling": "uniform",
      "use_grayscale": true,
      "val_fixed_noise": true,
      "val_fixed_seed": 999
    }
  },

  "training": {
    "trainer": "gan_denoise",
    "device": "cuda",
    "epochs": 40,
    "batch_size": 8,
    "num_workers": 4,
    "pin_memory": true,

    "lambda_rec": 100.0,

    "rec_criterion": {
      "name": "l1"
    },

    "optimizer_G_cfg": {
      "name": "adam",
      "args": {
        "lr": 0.0002,
        "betas": [0.5, 0.999]
      }
    },
    "optimizer_D_cfg": {
      "name": "adam",
      "args": {
        "lr": 0.0002,
        "betas": [0.5, 0.999]
      }
    }
  },

  "output": {
    "runs_root": "runs",
    "exp_name": "gan_rician"
  }
}
